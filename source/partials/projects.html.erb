<div class="container my-4">
  <div class="row">
    <div class="col-12">
      <div class="section py-3">
        <h2 class="text-center mb-3">Projects</h2>
        <div class="d-flex justify-content-around flex-wrap gap-3">
          <% data.projects.each do |project| %>
            <div class="card" style="width: 18rem;">
              <%= image_tag project.image, alt: "project picture", class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= project.name %></h5>
                <p class="card-text"><%= project.stack %></p>
                <p class="card-text"><%= project.description %></p>
                <%= link_to 'Github', project.github, class: 'btn btn-primary', target: '_blank' %>
                <%= link_to 'Demo', project.url, class: 'btn btn-primary', target: '_blank' if project.url %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
