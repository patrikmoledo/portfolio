<div class="container my-4">
  <div class="row">
    <div class="col-12">
      <div class="section py-3">
        <h2 class="text-center mb-3">Projects</h2>
        <div class="d-flex justify-content-around flex-wrap gap-3">
          <% data.projects.each do |project| %>
            <div class="card-project p-2">
              <div class="card-project-image d-flex justify-content-center align-items-center">
                <%= image_tag project.image, alt: "project picture" %>
              </div>
              <div class="card-project-detail p-2 d-flex flex-column">
                <div class="card-project-heading d-flex justify-content-between">
                  <h3 class="d-inline">
                    <%= project.name %>
                  </h3>
                  <div>
                    <a href="<%= project.github %>"><i class="fa-brands fa-github"></i></a>
                    <% if project.url %>
                      <a href="<%= project.github %>"><i class="fa-solid fa-square-arrow-up-right"></i></a>
                    <% end %>
                  </div>
                </div>
                <!-- <p class="card-project-stack"><%= project.stack %></p> -->
                <p class="card-project-description"><%= project.description %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
